{
  "name": "@colonial-collections/resolver",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "license": "MIT",
  "exports": "./dist/index.js",
  "scripts": {
    "build": "tsup",
    "dev": "NODE_ENV=development tsx watch ./src/index.ts",
    "start": "node ./dist/index.js",
    "test": "vitest --coverage",
    "test:once": "vitest --run",
    "vercel-build": "turbo run build && cp -r dist/* api && mkdir -p ./public && echo 'User-agent: *\nAllow: /' > ./public/robots.txt"
  },
  "dependencies": {
    "@hono/node-server": "1.7.0",
    "hono": "4.0.7"
  },
  "devDependencies": {
    "@colonial-collections/tsconfig": "*",
    "tsx": "4.7.1"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "4.12.0"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": "esm",
    "splitting": false,
    "sourcemap": false,
    "clean": true,
    "dts": true
  }
}
